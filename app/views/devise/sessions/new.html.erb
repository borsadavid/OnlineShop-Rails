<h2>Sign In</h2>
<div class="alignment">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input" %>
    </div>
 
    <div class="form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control input" %>
    </div>
 
    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <div class="form-check">
          <%= f.check_box :remember_me, class: "form-check-input custom-checkbox" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      </div>
    <% end %>
 
    <div class="actions">
      <br>
      <%= f.submit "Log in", class: "btn btn-primary limegreen-button" %>
      <br><br>
      <%= link_to "Continue as guest", main_path, class: "btn btn-primary green-button" %>
      <br>
      <br>
      <div class="indent">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>
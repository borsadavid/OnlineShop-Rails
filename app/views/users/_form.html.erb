<%= form_with(model: user, class: "form", id: "user-form") do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control green-border" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control green-border" %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, class: "form-control green-border" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control green-border" %>
  </div>
  <br>
  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-primary green-button" %>
  </div>
<% end %>

<div class="text-center mt-3">
    <%= link_to "Back to Users", users_path, class: "btn btn-secondary limegreen-button" %>
    <% if user.persisted? %>
      <%= link_to "View this User", user_path(user), class: "btn btn-primary limegreen-button" %>
    <% end %>
  </div>
</div>

<%= stylesheet_link_tag 'buttons' %>
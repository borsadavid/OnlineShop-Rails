<div class="card" style="width: 18rem;">
   <div class="card-body">
    <h5 class="card-title">
      <%= @category.name %>
    </h5>
    <p class="card-text">
      <%= @category.description %>
    </p>
    <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-primary green-button" %>
    <%= link_to "Back to categories", categories_path, class:"btn btn-primary green-button" %>
    <br>
    <%= button_to 'Destroy', category_path, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-primary limegreen-button"%>
    </div>
</div>
<%= stylesheet_link_tag 'buttons' %>